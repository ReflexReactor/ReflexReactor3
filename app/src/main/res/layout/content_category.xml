<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3be498"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.amit.reflexreactor.Category"
    tools:showIn="@layout/activity_category">

    <TextView
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="   Select \n          Category"
        android:textColor="#130784"
        android:textSize="50sp"
        android:textStyle="bold|italic" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category"
        android:layout_marginTop="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/geography"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="select_geography"
                android:text="GEOGRAPHY"
                android:textSize="30sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/sports"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/geography"
                android:layout_marginTop="3dp"
                android:onClick="select_sports"
                android:text="SPORTS"
                android:textSize="30sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/mythology"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sports"
                android:layout_marginTop="3dp"
                android:onClick="select_mythology"
                android:text="MYTHOLOGY"
                android:textSize="30sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/cricket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mythology"
                android:layout_marginTop="3dp"
                android:onClick="select_cricket"
                android:text="CRICKET"
                android:textSize="30sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/politics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cricket"
                android:layout_marginTop="3dp"
                android:onClick="select_politics"
                android:text="POLITICS"
                android:textSize="30sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/politics"
                android:layout_marginTop="3dp"
                android:onClick="select_history"
                android:text="HISTORY"
                android:textSize="30sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/science"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/history"
                android:layout_marginTop="3dp"
                android:onClick="select_science"
                android:text="SCIENCE"
                android:textSize="30sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/culture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/science"
                android:layout_marginTop="3dp"
                android:onClick="select_culture"
                android:text="CULTURE"
                android:textSize="30sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/culture"
                android:layout_marginTop="3dp"
                android:onClick="select_food"
                android:text="FOOD"
                android:textSize="30sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/food"
                android:layout_marginTop="3dp"
                android:onClick="select_music"
                android:text="MUSIC"
                android:textSize="30sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/start_single_player"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/music"
                android:layout_marginTop="50dp"
                android:background="#134578"
                android:onClick="start_single"
                android:text="Start"
                android:textColor="#ffffff"
                android:textSize="30sp" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
